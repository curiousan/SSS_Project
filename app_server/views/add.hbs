<div class="container-fluid item-upload">
    <div class="row">
        <form class="col-md-8" enctype="multipart/form-data" action="/api/videos" method="POST">
            <div class="form-group">
                <label for="#video-title">Title</label>
                <input type="text" class="form-control" id="video-title" placeholder="title of the video"
                    name="video-title">
            </div>
            <div class="form-group">
                <label for="#video-category">Category</label>
                <select name="video-category" class="form-control" id="video-category">
                    <option> Entertainment</option>
                    <option>Music videos</option>
                    <option> Documentary</option>
                    <option>Movies</option>
                    <option>Travel and Vlog</option>
                    <option>Technology</option>

                </select>
            </div>
            <div class="form-group">
                <label for="#video-artists">Track</label>
                <input type="text" class="form-control" id="artist" name="video-artists"
                    placeholder="list all the artists seperated by comma.">
            </div>

            <div class="form-group">
                <label for="#video-desc">Description</label>
                <textarea type="text" name="desc" id="video-desc" rows="5" rows="10" style="min-width: 100%"
                    placeholder="any description about the video"></textarea>
            </div>
            <div class="form-group">
                <label for="track">Track</label>
                <input type="file" class="file-control-file" id="video" name="video">
            </div>
            <input type="submit" value="submit">
        </form>
    </div>
</div>
