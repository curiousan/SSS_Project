<div class="container-fluid item-upload">
    <div class="row">
        <form class="col-md-8" enctype="multipart/form-data" action="/api/videos" method="POST">
            <div class="form-group">
                <label for="#video-title">Title</label>
                <input type="text" class="form-control" id="video-title" placeholder="Title of the video.."
                    name="video-title" required>
            </div>
            <div class="form-group">
                <label for="#video-category">Category</label>
                <select name="video-category" class="form-control" id="video-category" class="form-control">
                    <option> Entertainment</option>
                    <option>Music videos</option>
                    <option> Documentary</option>
                    <option>Movies</option>
                    <option>Travel and Vlog</option>
                    <option>Technology</option>
                </select>
            </div>
            <div class="form-group">
                <label for="#video-artists">Artist(s)</label>
                <input type="text" class="form-control " id="artist" name="video-artists"
                    placeholder="List all the artists separated by comma..." required>
            </div>

            <div class="form-group">
                <label for="#video-desc">Description</label>
                <textarea type="text" name="desc" id="video-desc" class="form-control" rows="5"
                    placeholder="Description about the video..."></textarea>
            </div>
            <div class="form-group">
                <label for="track">Media</label>
                <input type="file" class="form-control-file" id="video" name="video">
            </div>
            <input type="submit" class="btn btn-info px-4" value="Upload">
        </form>
    </div>
</div>
