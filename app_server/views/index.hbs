<!-- intro text container-->
<div class="album py-5 bg-light content-section">


    <!-- first container for feature video-->
    <div class="row recent-video-section">
        <div class="col-lg-4 main-info-section">
            <h3>Adaptive bitrate Streaming</h3>
            <img src="./static/images/stream.png" alt="" srcset="">
            <div class="feature feture-lists">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <img src="./static/images/tick.png" alt="" srcset=""> bandwidth support</li>
                    <li class="list-group-item">
                        <img src="./static/images/tick.png" alt="" srcset=""> Any platform or device compatable</li>
                    <li class="list-group-item">
                        <img src="./static/images/tick.png" alt="" srcset=""> various resolution and bitrate</li>
                    <li class="list-group-item">
                        <img src="./static/images/tick.png" alt="" srcset=""> Non stop streaming</li>
                    <li class="list-group-item">
                        <img src="./static/images/tick.png" alt="" srcset=""> MPEG-DASH and HLS Streaming</li>

                </ul>

            </div>

        </div>
        <div class="col-lg-8 light-blue-background feature-videos">
            <div class="row">
                {{#each videos}}
                <div class="col-sm-6 col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="./static/images/no-thumbnail.png" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="video-title">{{this.title}}</h4>
                            <ul>
                                {{#each this.artists}}
                                <li data-artist="{{this}}">{{this}}</li>
                                {{/each}}

                            </ul>
                            </br>
                            <font face="verdana">uploaded on: {{this.uploadedOn}} </font>
                            </br>
                            <font face="verdana">{{this.views}} Views</font>
                            </br>
                            <font face="verdana">{{this.desc}}</font>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="video-data-store" data-src="{{this.id}}">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary video-view " data-toggle="modal" data-target="#videoModal">View</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">delete</button>
                                    </div>
                                </div>
                                <small class="text-muted">{{this.length}} min</small>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>


    </div>

